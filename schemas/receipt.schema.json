{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Receipt",
  "type": "object",
  "required": [
    "image_path",
    "items",
    "totals",
    "validation",
    "created_at"
  ],
  "properties": {
    "image_path": {
      "type": "string"
    },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "unit_price", "quantity", "amount"],
        "properties": {
          "name": { "type": "string" },
          "unit_price": { "type": "number" },
          "quantity": { "type": "number" },
          "amount": { "type": "number" }
        }
      }
    },
    "totals": {
      "type": "object",
      "required": ["candidates"],
      "properties": {
        "candidates": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["value"],
            "properties": {
              "label": { "type": "string" },
              "value": { "type": "number" },
              "source": { "type": "string" }
            }
          }
        }
      }
    },
    "validation": {
      "type": "object",
      "required": ["status", "item_sum"],
      "properties": {
        "status": {
          "type": "string",
          "enum": ["OK", "MISMATCH", "AMBIGUOUS", "NO_TOTAL"]
        },
        "item_sum": { "type": "number" },
        "matched_total": {
          "type": ["object", "null"],
          "properties": {
            "label": { "type": "string" },
            "value": { "type": "number" },
            "source": { "type": "string" }
          }
        }
      }
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
